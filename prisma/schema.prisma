// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"] //  <---- important to support Prisma Query engine in Alpine linux, otherwise "PrismaClientInitializationError2 [PrismaClientInitializationError]: Query engine binary for current platform "linux-musl" could not be found."
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int           @id @default(autoincrement())
  phone          String        @unique
  name           String
  password       String
  progress       UserProgress?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  userProgressId Int?
}

model Course {
  id           Int            @id @default(autoincrement())
  title        String
  statements   Statement[]
  UserProgress UserProgress[]

  @@map("courses")
}

model Statement {
  id        Int     @id @default(autoincrement())
  order     Int     @unique
  chinese   String
  english   String
  soundmark String
  courseId  Int?
  courses   Course? @relation(fields: [courseId], references: [id])

  @@index([courseId], map: "Statement_courseId_fkey")
  @@map("statements")
}

model UserProgress {
  id             Int     @id @default(autoincrement())
  courseId       Int     @unique
  statementIndex Int
  active         Boolean
  courses        Course? @relation(fields: [courseId], references: [id])
  user           User    @relation(fields: [userId], references: [id])
  userId         Int     @unique

  @@index([courseId], name: "courseId")
}
